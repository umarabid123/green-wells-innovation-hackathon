# TrafficWise AI Frontend Environment Variables
# Copy this file to .env.local and configure as needed

# TomTom API Configuration (Primary mapping service)
NEXT_PUBLIC_TOMTOM_API_KEY=your_tomtom_api_key_here

# Backend API URL  
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# OpenAI API Configuration (for chatbot)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Configuration (alternative AI service)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# App Configuration
NEXT_PUBLIC_APP_NAME="TrafficWise AI"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Real-time traffic intelligence for Pakistan"

# Optional: Alternative Map Services (if needed)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_key_here
# NEXT_PUBLIC_MAPBOX_API_KEY=your_mapbox_key_here

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Optional: Enable additional features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
